<?xml version="1.0" encoding="UTF-8"?>
<!-- verinice Spring configuration file  -->
<!-- This file is referenced  in class sernet.gs.server.InternalServer --> 
<!-- This is a configuration for the search backend. -->
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="licenseManagementService" class="sernet.verinice.service.LicenseManagementStandaloneModeService">
    <property name="licenseManagementDao" ref="licenseManagementDao" />
    <property name="commandService" ref="hibernateCommandService" />
    <property name="lmDirectoryCreator" ref="lmDirectoryCreator" />
    <property name="cryptoService" ref="encryptionService" />
  </bean>
  
  <bean id="lmDirectoryCreator" class="sernet.verinice.licensemanagement.LMOsgiDirectoryCreator">
    <!-- vnl directory, relative to workspace -->
    <property name="vnlLocation" value="./vnl/" />
  </bean>

</beans>