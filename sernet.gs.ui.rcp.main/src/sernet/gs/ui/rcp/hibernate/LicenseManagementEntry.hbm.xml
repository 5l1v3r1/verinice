<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!-- 
	LicenseManagement items.
	@author Sebastian Hagedorn <sh[at]sernet.de>
 -->
<hibernate-mapping package="sernet.verinice.model.licensemanagement.hibernate">
	<class name="LicenseManagementEntry" table="licensemanagement">
		
		<id name="dbId" 
			type="java.lang.Integer" 
			column="dbId"
			unsaved-value="null">
			<generator class="native" />
		</id>
		
		<property name="userPassword"
				  type="string"
				  not-null="true">
		</property>
		
		<property name="salt"
				  type="string"
				  not-null="true">
		</property>
		
		<property name="contentIdentifier"
				  type="string"
				  not-null="true">
		</property>
		
		<property name="licenseID"
				  type="string"
				  not-null="true">
		</property>		
		
		<property name="validUsers"
				  type="string"
				  not-null="true">
		</property>
		
		<property name="validUntil"
				  type="string"
				  not-null="true">
		</property>
	</class>
</hibernate-mapping>							